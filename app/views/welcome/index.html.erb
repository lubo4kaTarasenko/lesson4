<h1>New Task</h1>
<%= form_for @task, remote: true do |f| %>
  <%= f.text_field :title %>
  <%= f.button :OK %>
<% end %>

<h2>Tasks</h2>
<%= form_tag tasks_path, method: :get do |f| %>
  <%= text_field_tag :q, params[:q] %>
  <%= submit_tag :Search %>
<% end %>
<ul>
  <% @tasks.each do |b| %>
    <li>
      <%= b.title %>
      <%= button_tag 'X', 'data-url' => task_path(b), 'data-remote' => true, 'data-method' => :delete %>
    </li>
  <% end %>
</ul>
